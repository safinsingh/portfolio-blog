---
import { ArrowUpRight } from "astro-feather-icons";

export interface Props {
	link: string;
	name: string;
}

const { link, name } = Astro.props;
---

<a href={link} target="_blank">
	{name}
	<ArrowUpRight />
</a>

<style lang="scss">
	a {
		margin-right: 1rem;
		display: inline-flex;
		align-items: center;

		&:hover,
		&:focus,
		&:active {
			background-size: 95% 0.1em;
		}
	}
</style>
